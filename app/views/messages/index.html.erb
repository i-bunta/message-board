

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>

<%= render 'form' %>

<div class="container">
  <%= form_for(Message.new, html: { class: 'new_message form-horizontal' }) do |f| %>
    <% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

    <div class="form-group">
      <div class="col-md-4">
        
        <label>名前</label>
        <%= f.text_field :name ,class:"form-control" %>
      </div>
    </div>
        
    <div class="form-group">
      <div class="col-md-4">
        <label>内容</label>
        <%= f.text_area :body , :size =>"30x10" ,class:"form-control" %>
      </div>
    </div>
    
    <%= f.submit class: "btn btn-sm btn-primary" %>
  <% end %>
</div>
